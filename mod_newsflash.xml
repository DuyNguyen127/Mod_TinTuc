<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="4.0" client="site" method="upgrade">
  <name>mod_TinTuc</name>
  <author>YourName</author>
  <version>1.0.0</version>
  <description>Module hiển thị tin nhanh từ RSS hoặc API</description>
  <files>
    <filename module="mod_newsflash">mod_newsflash.php</filename>
    <filename>helper.php</filename>
    <folder>tmpl</folder>
  </files>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="feed_url" type="text" label="URL RSS/API" required="true" />
        <field name="count" type="number" label="Số tin hiển thị" default="5" />
      </fieldset>
    </fields>
  </config>
</extension>
